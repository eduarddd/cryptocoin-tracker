<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="84dp"
    android:foreground="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/tv_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1" />

    <com.nightlydev.cryptocointracker.ui.CryptoIconTextView
        android:id="@+id/tv_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="14dp"
        android:textSize="22sp"
        app:layout_constraintStart_toEndOf="@+id/tv_rank"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/BCN" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/tv_icon"
        app:layout_constraintBottom_toBottomOf="@+id/tv_rank"
        tools:text="Bitcoin (BTC)" />

    <TextView
        android:id="@+id/tv_price_usd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="$ 11971.5" />

    <TextView
        android:id="@+id/tv_24h_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24h: "
        android:layout_marginStart="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_percent_change_24h"/>

    <TextView
        android:id="@+id/tv_percent_change_24h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_24h_label"
        tools:text="4.36%" />

    <TextView
        android:id="@+id/tv_7d_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7d: "
        app:layout_constraintEnd_toStartOf="@id/tv_percent_change_7d"
        app:layout_constraintBottom_toBottomOf="@id/tv_percent_change_7d"/>

    <TextView
        android:id="@+id/tv_percent_change_7d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="18.58%" />


</android.support.constraint.ConstraintLayout>